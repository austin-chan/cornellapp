<%
    var courseLink = 'course/' + course.get('subject') + '/' + course.get('catalogNbr'),
        departmentLink = 'department/' + course.get('subject');
%>
<div class="course-entry">
    <div class="upper">
        <span class="tag">
            <a href="<%- departmentLink %>"><%= course.get('subject') %></a>
            <%= course.get('catalogNbr') %>
        </span>
        <span class="when"><%= course.get('catalogWhenOffered') %></span>
        <a href="<%- courseLink %>" class="title"><%= course.get('titleLong') %></a>
    </div>
    <div class="lower">
        <p class="description freight-sans-pro">
            <%- course.get('description') || 'No description available.' %>
        </p>
        <div class="action-buttons">
            <%- include('like', { course: course, like: like }) %>
            <%- include('add', { course: course }) %>
            <a href="<%- courseLink %>" class="ca-catalog-button button">
                View Details
            </a>
        </div>
        <div class="extra-info freight-sans-pro">
            <% if (course.get('catalogSatisfiesReq')) { %>
                <p class="info"><strong>Satisfies Requirement:</strong> <%= course.get('catalogSatisfiesReq') %></p>
            <% } %>
            <% if (course.get('catalogBreadth')) { %>
                <p class="info"><strong>Breadth Requirement:</strong> <%= course.get('catalogBreadth') %></p>
            <% } %>
            <% if (course.get('catalogDistr')) { %>
                <p class="info"><strong>Distribution Category:</strong> <%= course.get('catalogDistr') %></p>
            <% } %>
        </div>
    </div>
</div>